<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="290dp"
    android:paddingEnd="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:background="@color/white"
        android:outlineAmbientShadowColor="@color/grey_light"
        app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/radar_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_beacon_radar"
                app:tint="@color/blue"
                android:layout_marginBottom="32dp"/>

            <RelativeLayout
                android:id="@+id/add_beacon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/radar_icon"
                android:background="@drawable/grey_no_round_button"
                android:elevation="1dp"
                android:outlineAmbientShadowColor="@color/grey"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/add_beacons_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/add_icon"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/beacon_add"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/add_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_add_24"
                    app:tint="@color/blue" />
            </RelativeLayout>
        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>

