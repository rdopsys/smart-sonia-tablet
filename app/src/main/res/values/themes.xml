<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartSoniaDashboard" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue</item>

        <!-- Background and text -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@color/white</item>
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/blue</item>             <!--header background-->
        <item name="android:windowBackground">@color/white</item>       <!--calendar background-->
        <item name="android:colorControlActivated">@color/blue</item>   <!--selected day-->
        <item name="android:textColorPrimary">@color/blue</item>        <!--days of the month-->
        <item name="android:textColorSecondary">@color/blue</item>      <!--days of the week-->
    </style>
</resources>